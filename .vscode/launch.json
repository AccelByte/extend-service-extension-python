{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug: App",
      "type": "debugpy",
      "request": "launch",
      "module": "app",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "PYTHONPATH": "src"
      },
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Debug: Gateway",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/gateway",
      "cwd": "${workspaceFolder}/gateway",
      "envFile": "${workspaceFolder}/.env"
    }
  ]
}
