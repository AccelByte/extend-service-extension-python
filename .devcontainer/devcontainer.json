{
  "name": "AccelByte Extend Service Extension",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
  // Configure VS Code extensions and settings
  "customizations": {
    "vscode": {
      "extensions": [
        // Editor
        "GitHub.copilot",      // Provides inline coding suggestions as you type
        "GitHub.copilot-chat", // A companion extension that provides conversational AI assistance

        // Environment
        "mikestead.dotenv", // dotenv file syntax highlighting and validation

        // Git
        "eamodio.gitlens", // Advanced Git insights, blame, history, comparisons

        // Config files
        "ms-vscode.vscode-json", // JSON syntax highlighting, validation, formatting
        "redhat.vscode-yaml",    // YAML syntax highlighting, validation, formatting

        // Build & scripts
        "ms-vscode.makefile-tools", // Makefile IntelliSense and targets UI
        "timonwong.shellcheck",     // Shell script static analysis (sh, bash, zsh)

        // Containers
        "ms-azuretools.vscode-docker", // Dockerfile/docker-compose authoring, images/containers management

        // Python Core: runtime/debugging, language server
        "ms-python.python",         // Python extension (debugging, testing, env)
        "ms-python.vscode-pylance", // Fast Python language server (type checking, IntelliSense)

        // Python Quality: linter and formatter
        "charliermarsh.ruff",         // Ruff linter + quick fixes + organize imports
        "ms-python.black-formatter", // Black code formatter integration

        // Go
        "golang.go", // Official Go tools (gopls, linting, tests, debug)

        // Protocol Buffers / gRPC
        "zxh404.vscode-proto3" // Syntax highlighting and linting for .proto files
      ],
      "settings": {
        "python.defaultInterpreterPath": "/workspace/venv/bin/python",
        "go.toolsManagement.checkForUpdates": "local",
        "go.useLanguageServer": true,
        "go.gopath": "/go",
        "go.goroot": "/usr/local/go"
      },
      "mcp": {
        "servers": {
          "devcon-extend-sdk": {
            "type": "stdio",
            "command": "/workspace/.devcontainer/docker-wrapper.sh",
            "args": [
              "run",
              "--rm",
              "--interactive",
              "--env", "TRANSPORT=stdio",
              "--env", "CONFIG_DIR=config/python",
              "ghcr.io/accelbyte/ags-extend-sdk-mcp-server:2025.7.0"
            ]
          }
        }
      }
    }
  },
  // Install common utilities (zsh, oh-my-zsh, etc.)
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true,
      "upgradePackages": true,
      "username": "vscode",
      "userUid": "automatic",
      "userGid": "automatic"
    }
  },
  // Run setup script after container creation
  "postCreateCommand": ".devcontainer/post-create.sh",
  // Forward these ports from container to host
  "forwardPorts": [
    6565,
    8000,
    8080
  ],
  "portsAttributes": {
    "6565": {
      "label": "gRPC Server",
      "onAutoForward": "notify"
    },
    "8000": {
      "label": "gRPC Gateway",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "Prometheus Metrics",
      "onAutoForward": "notify"
    }
  },
  // Run as non-root user for security
  "remoteUser": "vscode",
  // Mount Docker socket for containerized development
  "mounts": [
    {
      "source": "/var/run/docker.sock",
      "target": "/var/run/docker.sock",
      "type": "bind"
    }
  ]
}